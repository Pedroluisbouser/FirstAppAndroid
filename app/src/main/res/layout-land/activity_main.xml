<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/android">
    <Button
            android:text="@string/boton_entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:textAllCaps="false" android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp" app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <TextView
            android:text="@string/letrero_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#FFFFFF" android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>